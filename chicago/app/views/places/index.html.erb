<p><%= link_to "Add a New Place", new_place_path %></p>

<ul>

  <% @places.each do |place| %>
    <li>
      <%= link_to place.title, "/places/#{place.id}" %>
      (<%= number_to_currency(place.price / 100) %>)
      <%= link_to "Delete", "/places/#{place.id}", :method => 'delete' %>
    </li>
  <% end %>

</ul>
